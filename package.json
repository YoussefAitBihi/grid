{
  "name": "grid",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch ./sass/main.scss:css/main.css",
    "devserver": "live-server",
    "start": "npm-run-all --parallel watch:sass devserver",
    "compile:sass": "sass ./sass/main.scss:css/main.comp.css",
    "prefix:css": "postcss css/main.comp.css --use autoprefixer -b 'last 10 browsers' -o css/main.prefix.css",
    "compress:css": "sass ./css/main.prefix.css:css/main.css --style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Youssef Ait Bihi",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0"
  }
}
